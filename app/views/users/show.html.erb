<% if @user.photo.attached? %>
  <%= cl_image_tag(@user.photo.key, height: 300, width: 400, crop: :fill) %>
<% else %>
<img src="">
<% end %>
<h2><%= @user.first_name %></h2>
<p><%= @user.last_name %></p>
<p><%= @user.biography %></p>
<% if current_user.clubs.count != 0 || @user == current_user %>
  <p><%= @user.email %></p>
  <p><%= @user.phone_number %></p>
<% end %>
<p><%= @user.social_network_url %></p>

<%= link_to "Go back to my dashboard", dashboard_path %>
