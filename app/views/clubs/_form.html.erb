
<%= simple_form_for(club) do |f| %>
  <%= f.input :name %>
  <%= f.input :photo, as: :file %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category %>
  <%= f.input :description %>
  <%= f.input :capacity %>
  <%= f.input :hour_price %>
  <%= f.submit %>
<% end %>

